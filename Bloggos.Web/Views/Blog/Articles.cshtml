@model Bloggos.Web.Models.Blog.ArticlesViewModel
@{
    ViewData["Title"] = "Списък Статии | Администрация";
}

<h3>Списък Статии | Администрация</h3>
<hr />

<div>
    <a asp-action="CreateArticle" asp-controller="Blog" class="btn btn-outline-primary">Създаване на статия</a>
</div>
<hr />

@if(Model.Articles.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Заглавие</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model.Articles)
            {
                <tr>
                    <th>@article.Id</th>
                    <td>@article.Title</td>
                    <td>
                        <a asp-action="EditArticle" asp-controller="Blog" asp-route-id="@article.Id" class="btn btn-outline-warning">Редактирай</a>
                        <a asp-action="Article" asp-controller="Blog" asp-route-id="@article.Id" target="_blank" class="btn btn-outline-primary">Преглед</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>Няма открити статии!</p>
}