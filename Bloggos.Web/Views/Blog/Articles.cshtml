@model Bloggos.Web.Models.Blog.ArticlesViewModel
@{
    ViewData["Title"] = "Article | Administration";
}

<h3>Articles List | Administration</h3>
<hr />

<div>
    <a asp-action="CreateArticle" asp-controller="Blog" class="btn btn-outline-primary">Create Article</a>
</div>
<hr />

@if(Model.Articles.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model.Articles)
            {
                <tr>
                    <th>@article.Id</th>
                    <td>@article.Title</td>
                    <td>
                        <a asp-action="EditArticle" asp-controller="Blog" asp-route-id="@article.Id" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Article" asp-controller="Blog" asp-route-id="@article.Id" target="_blank" class="btn btn-outline-primary">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>No articles found!</p>
}