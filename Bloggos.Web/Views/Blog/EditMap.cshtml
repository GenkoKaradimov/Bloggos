@model Bloggos.Web.Models.Blog.MapViewModel
@{
    ViewData["Title"] = "Редактиране на Карта | Администрация";
}

<h2>Редактиране на Карта</h2>
<hr />

<form method="post" asp-action="EditMap" asp-controller="Blog" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="Id" class="form-label">Id (не подлежи на редакция)</label>
        <input type="text" class="form-control" id="Id" name="Id" value="@Model.Id" disabled>
    </div>
    <div class="mb-3">
        <label for="Title" class="form-label">Заглавие</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required>
    </div>
    <div class="mb-3">
        <label for="DescriptionHTML" class="form-label">Съдържание (HtmlContent)</label>
        <textarea class="form-control" id="DescriptionHTML" name="DescriptionHTML" rows="3" required>@Model.DescriptionHTML</textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary">Редактиране</button>
</form>
<hr />
<h4>Map Links</h4>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Заглавие</th>
            <th scope="col">Подредба</th>
            <th scope="col">Описание</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var link in Model.Destinations)
        {
            <tr>
                <th>@link.Id</th>
                <td>@link.Title</td>
                <td>@link.OrderWeight</td>
                <td>@link.Description</td>
                <td>
                    <a asp-action="EditMapLink" asp-controller="Blog" asp-route-id="@link.Id" class="btn btn-outline-primary">Редактиране</a>
                </td>
            </tr>
        }
    </tbody>
</table>