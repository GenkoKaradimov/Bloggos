@model Bloggos.Web.Models.Blog.MapsViewModel
@{
    ViewData["Title"] = "Карти | Администрация";
}

<h3>Карти | Администрация</h3>
<hr />

<div>
    <a asp-action="CreateMap" asp-controller="Blog" class="btn btn-outline-primary">Създаване на Карта</a>
</div>
<hr />

@if(Model.Maps.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Заглавие</th>
                <th scope="col">Връзки</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var map in Model.Maps)
            {
                <tr>
                    <th>@map.Id</th>
                    <td>@map.Title</td>
                    <td>@map.Destinations.Count()</td>
                    <td>
                        <a asp-action="Map" asp-controller="Blog" asp-route-id="@map.Id" target="_blank" class="btn btn-outline-primary">Преглед</a>
                        <a href="/Blog/AddMapLink?mapId=@map.Id" class="btn btn-outline-primary">Добави Линк</a>
                        <a asp-action="EditMap" asp-controller="Blog" asp-route-id="@map.Id" class="btn btn-outline-warning">Редактиране</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>Няма открити карти!</p>
}