@model Bloggos.Web.Models.Blog.MapsViewModel
@{
    ViewData["Title"] = "Maps | Administration";
}

<h3>Maps | Administration</h3>
<hr />

<div>
    <a asp-action="CreateMap" asp-controller="Blog" class="btn btn-outline-primary">Create Map</a>
</div>
<hr />

@if(Model.Maps.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Links</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var map in Model.Maps)
            {
                <tr>
                    <th>@map.Id</th>
                    <td>@map.Title</td>
                    <td>@map.Destinations.Count()</td>
                    <td>
                        <a asp-action="Map" asp-controller="Blog" asp-route-id="@map.Id" target="_blank" class="btn btn-outline-primary">View</a>
                        <a href="/Blog/AddMapLink?mapId=@map.Id" target="_blank" class="btn btn-outline-primary">Add Link</a>
                        <a asp-action="EditMap" asp-controller="Blog" asp-route-id="@map.Id" target="_blank" class="btn btn-outline-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>No maps found!</p>
}