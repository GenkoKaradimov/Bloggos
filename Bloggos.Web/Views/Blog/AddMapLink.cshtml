@model Bloggos.Web.Models.Blog.MapLinkViewModel
@{
    ViewData["Title"] = "Създаване на Линк-Карта | Администрация";
}

<h2>Създаване на Линк-Карта</h2>
<hr />

<form method="post" asp-action="AddMapLink" asp-controller="Blog" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="Title" class="form-label">Заглавие</label>
        <input type="text" class="form-control" id="Title" name="Title" required>
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Описание</label>
        <textarea class="form-control" id="Description" name="Description" rows="3" required></textarea>
    </div>
    <div class="mb-3">
        <label for="ImageSource" class="form-label">Път към изображението</label>
        <input type="text" class="form-control" id="ImageSource" name="ImageSource" required>
    </div>
    <div class="mb-3">
        <label for="MapId" class="form-label">MapId</label>
        <input type="number" class="form-control" id="MapId" name="MapId" value="@Model.MapId" required>
    </div>
    <div class="mb-3">
        <label for="DestinationId" class="form-label">Цел (Id)</label>
        <input type="text" class="form-control" id="DestinationId" name="DestinationId" required>
    </div>
    <div class="mb-3">
        <label for="OrderWeight" class="form-label">Тежест при подредбата</label>
        <input type="number" class="form-control" id="OrderWeight" name="OrderWeight" required>
    </div>
    <div class="mb-3">
        <label for="DestinationType" class="form-label">Цел (Тип)</label>
        <select class="form-select" id="DestinationType" name="DestinationType" required>
            @foreach (var op in Model.DestinationOptions)
            {
                <option value="@op.Key">@op.Value</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-outline-primary">Създаване</button>
</form>
